<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
	<screen id="controls" controller="mygame.Main">
		<layer id="foreground" childLayout="center">
				<panel id="mainPanel" childLayout="horizontal" valign="bottom" width="70%" height="10%" backgroundColor="#29293D" align="center">
					<image id="button" filename="Interface/hud/play-button.png" width="10%" height="80%" align="left" valign="center" visibleToMouse="true">
						<interact onClick="play()"/>
					</image>
					<panel id="playBar" height="10%"backgroundColor="#ffff" valign="center"/>
					<text id="speedText" text="x1" width="10%" height="80%" valign="center" color="#ffff" font="Interface/Fonts/Default.fnt"/>
				</panel>
			</layer>
	</screen>
</nifty>