<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="controls" controller="com.thiastux.human_simulator.Test2">
        <layer id="foreground" childLayout="center">
            <panel id="containerPanel" width="60%" childLayout="horizontal" valign="bottom" backgroundColor="#ffff" height="10%" visibleToMouse="true">
                <control name="textfield" maxLength="20" width="80%" id="userLabel" visibleToMouse="true" backgroundColor="#ffff" valign="center"/>
                <control name="button" label="Confirm" id="ConfirmLabel" align="center" valign="center"
                             visibleToMouse="true" >
                    <interact onClick="saveTest2Event()"/>
                </control>
            </panel>
        </layer>
    </screen>
</nifty>
